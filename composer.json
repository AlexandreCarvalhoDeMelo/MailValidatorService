{
    "name": "validators/mailvalidator",
    "description": "Mail validator service",
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "MailValidator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php-di/php-di": "^6.0",
        "slim/slim": "^4.2",
        "slim/psr7": "^1.6.1"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^7.5",
        "roave/security-advisories": "dev-master"
    }
}
